            },
            "url": {
              "raw": "{{base_url}}/sensor-api-mappings/bulk",
              "host": ["{{base_url}}"],
              "path": ["sensor-api-mappings", "bulk"]
            }
          }
        },
        {
          "name": "Get Mapping Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/sensor-api-mappings/1",
              "host": ["{{base_url}}"],
              "path": ["sensor-api-mappings", "1"]
            }
          }
        },
        {
          "name": "Update Mapping",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_active\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/sensor-api-mappings/1",
              "host": ["{{base_url}}"],
              "path": ["sensor-api-mappings", "1"]
            }
          }
        },
        {
          "name": "Delete Mapping",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/sensor-api-mappings/1",
              "host": ["{{base_url}}"],
              "path": ["sensor-api-mappings", "1"]
            }
          }
        }
      ]
    }
  ]
}
